<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="MauiNurAppTemplate.Views.SettingsPage"
             Title="Settings">
    <VerticalStackLayout Margin="0,25">
        <Button  BackgroundColor="DarkRed" Clicked="OnReader" CornerRadius="8" HorizontalOptions="Center" Text="Reader connection" TextColor="White" WidthRequest="180" />
        <Button  Margin="0,30" IsVisible="{Binding UpdateIsVisible}" BackgroundColor="DarkRed" Clicked="OnUpdate" CornerRadius="8" HorizontalOptions="Center" Text="Check updates!" TextColor="White" WidthRequest="180" />
        <Label Text="Enable NUR logging" HorizontalOptions="Center"></Label>
        <CheckBox x:Name="LogEnableCheck" IsChecked="false" CheckedChanged="CheckBox_CheckedChanged" />
        <Button  Margin="0,10" BackgroundColor="Blue" Clicked="OnShareLogs" CornerRadius="8" HorizontalOptions="Center" Text="Share logs" TextColor="White" WidthRequest="180" />
    </VerticalStackLayout>
    
</ContentPage>